<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="MGBS"
        android:ems="10"
        android:id="@+id/editTextSource"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/editTextDestination"
        android:layout_alignStart="@+id/editTextDestination" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Source :"
        android:id="@+id/textView"
        android:paddingLeft="50dp"
        android:layout_marginTop="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Secendarabad"
        android:ems="10"
        android:id="@+id/editTextDestination"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Destination :"
        android:paddingLeft="35dp"
        android:id="@+id/textView2"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/editTextSource"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Directions"
        android:id="@+id/buttDirections"
        android:layout_below="@+id/buttbusses"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Busses"
        android:id="@+id/buttbusses"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttTimings2"
        android:layout_alignStart="@+id/buttTimings2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Timings"
        android:id="@+id/buttTimings2"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/buttDirections"
        android:layout_centerHorizontal="true" />

</RelativeLayout>